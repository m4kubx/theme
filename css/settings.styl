@import 'html5-reset'
@import 'prefix-free'

color1 = #236170
color2 = spin(color1, 325deg)
color3 = complement(color1)
color4 = darken(color2, 20%)
color5 = lighten(color1, 20%)
general-word-color = #EEE
background-color = lighten(color1, 75%)

containers-width = 80%

bar-height = 3em
top-height = 1em

center() 
	margin-left auto
	margin-right auto

vertical-align-top()
	display inline-block
	vertical-align top

// @keyframes appear
//   for i in 0..10
//     {10% * i}
//       opacity (i/10)

@keyframes appear
	0%
		margin-top 0
		opacity 0
	100%
		opacity 1
		
@keyframes lighting
	0%	
		opacity .5
	50%
		opacity .9
	100%
		opacity .5

html
	font-family arial
	background-color background-color
	
