@import 'settings'
@import 'header'

.content
	background color2
	center()
	height 20em
	margin-top top-height
	position relative
	width containers-width
	& .auth
		background color4
		height 17em
		min-height 2em
		padding 1em .5em 0 .5em
		position absolute
		top 1em
		vertical-align-top()
		width 45%
		@media screen and (max-width: 825px)
			display block
			margin 1em auto
			position static
			width 90%
		& .tittle
			color general-word-color
			margin-bottom 1em
		& .field
			margin-bottom .5em
			padding .3em .3em
			vertical-align-top()		
			width 11em
			@media screen and (max-width: 1063px)
				width 9em			
			@media screen and (max-width: 824px)
				width 13em
			@media screen and (max-width: 563px)
				width 8.5em
			@media screen and (max-width: 380px)
				width 95%

		& .submit
			display block
			height 3em
			margin-top 1em
			margin-left 18em
			@media screen and (max-width: 1063px)
				margin-left 13.5em
			@media screen and (max-width: 824px)
				margin-left 22em
			@media screen and (max-width: 563px)
				margin-left 12em
			@media screen and (max-width: 380px)
				margin-left 0
				position static
				width 100%
		@media screen and (max-width: 380px)
			height auto
			padding-bottom .5em		
	@media screen and (max-width: 825px)
		height auto
		padding .5em 0
		

	& .login
		left 2%
	& .signup 
		right 2%
